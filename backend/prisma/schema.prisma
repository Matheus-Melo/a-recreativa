generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model LessonPlan {
  id String @id @default(uuid())

  originalFileName String
  originalFileType String
  originalFilePath String

  title      String
  discipline String?
  gradeLevel String?
  author     String?

  summary     String? // Resumo da atividade
  objectives  String? // Objetivos
  skills      String? // Habilidades Trabalhadas
  duration    String? // Tempo para realização em Tempo e Recursos
  resources   String? // Restante da secção Tempo e Recursos
  development String? // Passo a Passo da Atividade
  evaluation  String? // Avaliação da Aprendizagem

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
